{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "assets": ["./src/assets"],
      "assets/*": ["./src/assets/*"],
      "@redux": ["./src/redux"],
      "@redux/*": ["./src/redux/*"],
      "utils": ["./src/utils"],
      "utils/*": ["./src/utils/*"],
      "layouts": ["./src/layouts"],
      "layouts/*": ["./src/layouts/*"],
      "components": ["./src/components"],
      "components/*": ["./src/components/*"],
      "lib": ["./src/lib"],
      "lib/*": ["./src/lib/*"],
      "pages": ["./src/pages"],
      "pages/*": ["./src/pages/*"],
      "routes": ["./src/routes"],
      "routes/*": ["./src/routes/*"],
      "services": ["./src/services"],
      "services/*": ["./src/services/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
